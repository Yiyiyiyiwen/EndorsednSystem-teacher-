<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_operate_window">
    <LinearLayout
        android:id="@+id/layout_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/red_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/selectable_help_color"/>

        <TextView
            android:id="@+id/blue_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/selectable_help_blue"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/black_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#000"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/black_color2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#222"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/black_color3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#444"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/black_color4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#666"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/black_color5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#888"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/selectable_delete"
            style="@style/OperateTextView"
            android:text="@string/delete"
            android:enabled="false"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@id/layout_up">
        <TextView
            android:id="@+id/tv_note"
            style="@style/OperateTextView"
            android:text="@string/note"/>

        <TextView
            android:id="@+id/tv_copy"
            style="@style/OperateTextView"
            android:text="@string/copy"/>

        <TextView
            android:id="@+id/tv_select_all"
            style="@style/OperateTextView"
            android:text="@string/select_all"/>
    </LinearLayout>

</RelativeLayout>